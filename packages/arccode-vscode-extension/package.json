{
  "name": "arccode",
  "publisher": "arccode",
  "displayName": "Arccode",
  "description": "A role-playing game for developers",
  "version": "0.0.9",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#328bff",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "game",
    "rpg",
    "mmorpg"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dherault/arccode.git"
  },
  "bugs": {
    "url": "https://github.com/dherault/arccode/issues"
  },
  "homepage": "https://github.com/dherault/arccode",
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:go",
    "onLanguage:java",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:php",
    "onLanguage:python",
    "onLanguage:ruby",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "arccode.signIn",
        "title": "Sign in",
        "category": "Arccode",
        "icon": "$(sign-in)"
      },
      {
        "command": "arccode.activateExtension",
        "title": "Activate extension",
        "category": "Arccode",
        "icon": "$(refresh)"
      },
      {
        "command": "arccode.sync",
        "title": "Sync now",
        "category": "Arccode",
        "icon": "$(sync)"
      },
      {
        "command": "arccode.print",
        "title": "Print progress",
        "category": "Arccode",
        "icon": "$(list-flat)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "arccode.signIn",
          "group": "navigation@10"
        }
      ]
    }
  },
  "scripts": {
    "deploy": "vsce publish",
    "pretest": "npm run compile && npm run lint",
    "lint": "tsc && eslint src --ext ts",
    "test": "vscode-test",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map"
  },
  "dependencies": {
    "array-differences": "^1.3.1",
    "axios": "^1.7.4",
    "language-keywords": "^1.2.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "22.x",
    "@types/tmp": "^0.2.6",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  }
}
